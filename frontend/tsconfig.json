{
  "compilerOptions": {
    "baseUrl": "./",
    "rootDir": "./src", // Set the root directory for all source files to frontend/src
    "composite": true,
    "outDir": "./dist",
    "module": "commonjs",
    "target": "es5",
    "jsx": "react-jsx",
    "lib": ["dom", "es2015"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "./src/**/*" // Includes everything in the frontend/src directory
  ],
  "exclude": ["node_modules"],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ]
}
